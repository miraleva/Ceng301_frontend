<%- include('../partials/layout_start') %>

    <div class="stats-grid">
        <div class="stat-card">
            <h3>Total Members</h3>
            <div class="value"><%= stats.totalMembers %></div>
        </div>
        <div class="stat-card">
            <h3>Active Classes</h3>
            <div class="value"><%= stats.activeClasses %></div>
        </div>
        <div class="stat-card">
            <h3>Monthly Revenue</h3>
            <div class="value">$<%= stats.monthlyRevenue.toLocaleString() %></div>
        </div>
    </div>

    <!-- Quick actions & activity -->
    <div class="dashboard-lower">
        
        <!-- Quick Actions -->
        <div class="dashboard-card">
            <div class="card-header">
                <h3>Quick Actions</h3>
            </div>
            <div class="card-body">
                <div class="quick-actions-grid">
                    <a href="/members" class="btn btn-primary" style="justify-content: center;">
                        + Add Member
                    </a>
                    <a href="/payments" class="btn btn-primary" style="justify-content: center;">
                        $ Record Payment
                    </a>
                    <a href="/enrollments" class="btn btn-primary" style="justify-content: center;">
                        âœŽ New Enrollment
                    </a>
                    <a href="/reports" class="btn btn-primary" style="justify-content: center;">
                        ðŸ“Š View Reports
                    </a>
                </div>
            </div>
        </div>

        <!-- Recent Activity -->
        <div class="dashboard-card">
            <div class="card-header">
                <h3>Recent Activity</h3>
            </div>
            <div class="card-body">
                <ul class="activity-list">
                    <% recentActivity.forEach(item => { %>
                        <li>
                            <div class="activity-info">
                                <span class="badge badge-<%= item.type.toLowerCase() %>"><%= item.type %></span>
                                <span class="activity-text"><%= item.text %></span>
                            </div>
                            <span class="activity-date"><%= item.date %></span>
                        </li>
                    <% }) %>
                    <% if(recentActivity.length === 0) { %>
                        <li style="color: #9ca3af; font-style: italic; justify-content: center;">No recent activity.</li>
                    <% } %>
                </ul>
            </div>
        </div>

    </div>

<%- include('../partials/layout_end') %>
