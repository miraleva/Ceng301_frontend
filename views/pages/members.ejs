<%- include('../partials/layout_start') %>

    <% if (typeof success !== 'undefined' && success) { %>
        <div class="alert alert-success"><%= success %></div>
    <% } %>
    <% if (typeof error !== 'undefined' && error) { %>
        <div class="alert alert-error"><%= error %></div>
    <% } %>

    <div class="table-actions">
        <div style="display:flex; gap:1rem; align-items:center; flex:1;">
            <input type="text" id="tableSearch" class="form-control search-bar" placeholder="Search members...">
            <select id="membershipFilter" class="filter-select">
                <option value="all">All Memberships</option>
                <% memberships.forEach(m => { %>
                    <option value="<%= m.type.toLowerCase() %>"><%= m.type %></option>
                <% }) %>
            </select>
        </div>
        <button class="btn btn-primary btn-add" data-modal-target="memberModal">
            + Add Member
        </button>
    </div>

    <div class="table-container">
        <table class="data-table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Full Name</th>
                    <th>Gender</th>
                    <th>Date of Birth</th>
                    <th>Age</th>
                    <th>Membership</th>
                    <th>Joined</th>
                    <th>Contact</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% members.forEach(m => { 
                    // Match membership name
                    const memType = memberships.find(x => x.membership_id == m.membership_id);
                    const age = new Date().getFullYear() - new Date(m.date_of_birth).getFullYear(); // Simple calc
                %>
                <tr>
                    <td>#<%= m.member_id %></td>
                    <td><%= m.first_name %> <%= m.last_name %></td>
                    <td><%= m.gender === 'M' ? 'Male' : (m.gender === 'F' ? 'Female' : 'Other') %></td>
                    <td><%= formatDate(m.date_of_birth) %></td>
                    <td>
                        <span class="age-display" data-dob="<%= m.date_of_birth %>">
                            <%= age %>
                        </span>
                    </td>
                    <td data-type="membership"><%= memType ? memType.type : 'Unknown' %></td>
                    <td><%= formatDate(m.registration_date) %></td>
                    <td>
                        <% if(m.phone) { %> <div>ðŸ“ž <%= m.phone %></div> <% } %>
                        <% if(m.email) { %> <div style="font-size:0.75rem; color:#6b7280"><%= m.email %></div> <% } %>
                    </td>
                    <td>
                        <button class="btn btn-sm btn-secondary btn-edit" 
                                data-modal-target="memberModal" 
                                data-entry='<%= JSON.stringify(m) %>'>
                            Edit
                        </button>
                        <button class="btn btn-sm btn-danger btn-delete" 
                                data-modal-target="deleteModal"
                                data-id="<%= m.member_id %>">
                            Delete
                        </button>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>

    <!-- Add/Edit Member Modal -->
    <div id="memberModal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h2>Member Details</h2>
                <button class="close-modal">&times;</button>
            </div>
            <form action="/members/create" method="POST" data-resource="members">
                <input type="hidden" name="member_id">
                
                <div style="display:grid; grid-template-columns: 1fr 1fr; gap: 1rem;">
                    <div class="form-group">
                        <label>First Name</label>
                        <input type="text" name="first_name" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label>Last Name</label>
                        <input type="text" name="last_name" class="form-control" required>
                    </div>
                </div>

                <div class="form-group">
                    <label>Gender</label>
                    <select name="gender" class="form-control" required>
                        <option value="M">Male</option>
                        <option value="F">Female</option>
                        <option value="O">Other</option>
                    </select>
                </div>

                <div class="form-group">
                    <label>Date of Birth</label>
                    <input type="date" name="date_of_birth" class="form-control" required>
                </div>
                
                <div class="form-group">
                    <label>Registration Date</label>
                    <input type="date" name="registration_date" class="form-control">
                </div>

                <div class="form-group">
                    <label>Membership Tier</label>
                    <select name="membership_id" class="form-control" required>
                        <% memberships.forEach(m => { %>
                            <option value="<%= m.membership_id %>"><%= m.type %> ($<%= m.price %>)</option>
                        <% }) %>
                    </select>
                </div>

                <div class="form-group">
                    <label>Phone (Optional)</label>
                    <input type="text" name="phone" class="form-control">
                </div>

                <div class="form-group">
                    <label>Email (Optional)</label>
                    <input type="email" name="email" class="form-control">
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary close-modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Delete Confirmation Modal -->
    <div id="deleteModal" class="modal">
        <div class="modal-content" style="max-width: 400px;">
            <div class="modal-header">
                <h2>Confirm Delete</h2>
                <button class="close-modal">&times;</button>
            </div>
            <p>Are you sure you want to delete this member?</p>
            <form action="/members/delete" method="POST">
                <input type="hidden" name="member_id">
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary close-modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Delete</button>
                </div>
            </form>
        </div>
    </div>

    <script src="/js/main.js"></script>
    <script>
        // Update ages client-side for precision
        document.addEventListener('DOMContentLoaded', () => {
            document.querySelectorAll('.age-display').forEach(span => {
                const dob = span.getAttribute('data-dob');
                // Ensure calculateAge is available or re-impl
                if(typeof calculateAge === 'function') {
                   span.textContent = calculateAge(dob);
                }
            });
        });
    </script>

<%- include('../partials/layout_end') %>
