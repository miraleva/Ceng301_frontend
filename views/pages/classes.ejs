<%- include('../partials/layout_start') %>

    <% if (typeof success !== 'undefined' && success) { %>
        <div class="alert alert-success"><%= success %></div>
    <% } %>
    <% if (typeof error !== 'undefined' && error) { %>
        <div class="alert alert-error"><%= error %></div>
    <% } %>

    <div class="table-actions">
        <div style="display:flex; gap:1rem; align-items:center; flex:1;">
            <select id="trainerFilter" class="filter-select">
                <option value="all">All Trainers</option>
                <% trainers.forEach(t => { %>
                    <option value="<%= t.first_name.toLowerCase() %>"><%= t.first_name %> <%= t.last_name %></option>
                <% }) %>
            </select>
        </div>
        <button class="btn btn-primary btn-add" data-modal-target="classModal">
            + Add Class
        </button>
    </div>

    <div class="table-container">
        <table class="data-table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Class Name</th>
                    <th>Schedule</th>
                    <th>Capacity</th>
                    <th>Trainer</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% classes.forEach(c => { 
                    const trainer = trainers.find(t => t.trainer_id == c.trainer_id);
                %>
                <tr>
                    <td>#<%= c.class_id %></td>
                    <td><%= c.class_name %></td>
                    <td><%= c.schedule %></td>
                    <td><%= c.capacity %></td>
                    <td data-type="trainer"><%= trainer ? (trainer.first_name + ' ' + trainer.last_name) : 'Assignments Pending' %></td>
                    <td>
                        <button class="btn btn-sm btn-secondary btn-edit" 
                                data-modal-target="classModal" 
                                data-entry='<%= JSON.stringify(c) %>'>
                            Edit
                        </button>
                        <button class="btn btn-sm btn-danger btn-delete" 
                                data-modal-target="deleteModal"
                                data-id="<%= c.class_id %>">
                            Delete
                        </button>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>

    <!-- Class Modal -->
    <div id="classModal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h2>Class Details</h2>
                <button class="close-modal">&times;</button>
            </div>
            <form action="/classes/create" method="POST" data-resource="classes">
                <input type="hidden" name="class_id">
                
                <div class="form-group">
                    <label>Class Name</label>
                    <input type="text" name="class_name" class="form-control" required placeholder="e.g. HIIT">
                </div>

                <div class="form-group">
                    <label>Schedule</label>
                    <input type="text" name="schedule" class="form-control" placeholder="e.g. 2025-12-01 10:00">
                </div>

                <div class="form-group">
                    <label>Trainer</label>
                    <select name="trainer_id" class="form-control" required>
                        <% trainers.forEach(t => { %>
                            <option value="<%= t.trainer_id %>"><%= t.first_name %> <%= t.last_name %> (<%= t.specialization %>)</option>
                        <% }) %>
                    </select>
                </div>

                <div class="form-group">
                    <label>Capacity</label>
                    <input type="number" name="capacity" class="form-control" min="0" value="20">
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary close-modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Delete Modal -->
    <div id="deleteModal" class="modal">
        <div class="modal-content" style="max-width: 400px;">
            <div class="modal-header">
                <h2>Confirm Delete</h2>
                <button class="close-modal">&times;</button>
            </div>
            <p>Are you sure you want to delete this class?</p>
            <form action="/classes/delete" method="POST">
                <input type="hidden" name="class_id">
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary close-modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Delete</button>
                </div>
            </form>
        </div>
    </div>

    <script src="/js/main.js"></script>
    <script>
        // Simple client-side trainer filter
        const trainerFilter = document.getElementById('trainerFilter');
        if (trainerFilter) {
            trainerFilter.addEventListener('change', function() {
                const value = this.value.toLowerCase();
                const rows = document.querySelectorAll('.data-table tbody tr');
                rows.forEach(row => {
                    const cell = row.querySelector('[data-type="trainer"]');
                    const text = cell ? cell.textContent.toLowerCase() : '';
                    if (value === 'all' || text.includes(value)) {
                        row.style.display = '';
                    } else {
                        row.style.display = 'none';
                    }
                });
            });
        }
    </script>

<%- include('../partials/layout_end') %>
