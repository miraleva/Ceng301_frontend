<%- include('../partials/layout_start') %>

    <% if (typeof success !== 'undefined' && success) { %>
        <div class="alert alert-success"><%= success %></div>
    <% } %>
    <% if (typeof error !== 'undefined' && error) { %>
        <div class="alert alert-error"><%= error %></div>
    <% } %>

    <div class="table-actions">
        <div class="left-tools">
            <h2 style="font-size: 1.25rem; font-weight: 600;">All Memberships</h2>
        </div>
        <button class="btn btn-primary btn-add" data-modal-target="membershipModal">
            + Add Membership
        </button>
    </div>

    <div class="table-container">
        <table class="data-table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Membership Type</th>
                    <th>Duration (Days)</th>
                    <th>Price ($)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% memberships.forEach(m => { %>
                <tr>
                    <td>#<%= m.membership_id %></td>
                    <td><%= m.type %></td>
                    <td><%= m.duration %></td>
                    <td><%= m.price %></td>
                    <td>
                        <button class="btn btn-sm btn-secondary btn-edit" 
                                data-modal-target="membershipModal" 
                                data-entry='<%= JSON.stringify(m) %>'>
                            Edit
                        </button>
                        <button class="btn btn-sm btn-danger btn-delete" 
                                data-modal-target="deleteModal"
                                data-id="<%= m.membership_id %>">
                            Delete
                        </button>
                    </td>
                </tr>
                <% }) %>
                <% if(memberships.length === 0) { %>
                    <tr><td colspan="5" style="text-align:center">No memberships found.</td></tr>
                <% } %>
            </tbody>
        </table>
    </div>

    <!-- Add/Edit Modal -->
    <div id="membershipModal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h2>Membership Details</h2>
                <button class="close-modal">&times;</button>
            </div>
            <form action="/memberships/create" method="POST" data-resource="memberships">
                <input type="hidden" name="membership_id">
                
                <div class="form-group">
                    <label>Type</label>
                    <input type="text" name="type" class="form-control" required placeholder="e.g. Gold">
                </div>
                
                <div class="form-group">
                    <label>Duration (Days)</label>
                    <input type="number" name="duration" class="form-control" required placeholder="30">
                </div>

                <div class="form-group">
                    <label>Price</label>
                    <input type="number" name="price" class="form-control" required placeholder="50.00" step="0.01">
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary close-modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Delete Confirmation Modal -->
    <div id="deleteModal" class="modal">
        <div class="modal-content" style="max-width: 400px;">
            <div class="modal-header">
                <h2>Confirm Delete</h2>
                <button class="close-modal">&times;</button>
            </div>
            <p>Are you sure you want to delete this membership? This action cannot be undone.</p>
            <form action="/memberships/delete" method="POST">
                <input type="hidden" name="membership_id">
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary close-modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Delete</button>
                </div>
            </form>
        </div>
    </div>

    <script src="/js/main.js"></script>

<%- include('../partials/layout_end') %>
