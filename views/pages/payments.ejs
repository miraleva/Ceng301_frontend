<%- include('../partials/layout_start') %>

    <% if (typeof success !== 'undefined' && success) { %>
        <div class="alert alert-success"><%= success %></div>
    <% } %>
    <% if (typeof error !== 'undefined' && error) { %>
        <div class="alert alert-error"><%= error %></div>
    <% } %>

    <div class="table-actions">
        <div class="left-tools">
            <h2 style="font-size: 1.25rem; font-weight: 600;">Payments</h2>
        </div>
        <button class="btn btn-primary btn-add" data-modal-target="paymentModal">
            + Record Payment
        </button>
    </div>

    <div class="table-container">
        <table class="data-table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Member Name</th>
                    <th>Amount ($)</th>
                    <th>Date</th>
                    <th>Method</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% payments.forEach(p => { 
                   const member = members.find(m => m.member_id == p.member_id);
                %>
                <tr>
                    <td>#<%= p.payment_id %></td>
                    <td><%= member ? (member.first_name + ' ' + member.last_name) : 'Unknown Member' %></td>
                    <td style="font-weight:600; color: #166534;">$<%= p.amount.toFixed(2) %></td>
                    <td><%= formatDate(p.payment_date) %></td>
                    <td>
                        <span style="padding: 2px 8px; background:#e5e7eb; border-radius:4px; font-size:0.75rem;">
                            <%= p.payment_method %>
                        </span>
                    </td>
                    <td>
                        <button class="btn btn-sm btn-secondary btn-edit" 
                                data-modal-target="paymentModal" 
                                data-entry='<%= JSON.stringify(p) %>'>
                            Edit
                        </button>
                        <button class="btn btn-sm btn-danger btn-delete" 
                                data-modal-target="deleteModal"
                                data-id="<%= p.payment_id %>">
                            Delete
                        </button>
                    </td>
                </tr>
                <% }) %>
                <% if(payments.length === 0) { %>
                    <tr><td colspan="6" style="text-align:center">No payments recorded.</td></tr>
                <% } %>
            </tbody>
        </table>
    </div>

    <!-- Payment Modal -->
    <div id="paymentModal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h2>Payment Details</h2>
                <button class="close-modal">&times;</button>
            </div>
            <form action="/payments/create" method="POST" data-resource="payments">
                <input type="hidden" name="payment_id">
                
                <div class="form-group">
                    <label>Member</label>
                    <select name="member_id" class="form-control" required>
                        <% members.forEach(m => { %>
                            <option value="<%= m.member_id %>"><%= m.first_name %> <%= m.last_name %></option>
                        <% }) %>
                    </select>
                </div>

                <div class="form-group">
                    <label>Amount ($)</label>
                    <input type="number" name="amount" class="form-control" required step="0.01" min="0">
                </div>

                <div class="form-group">
                    <label>Payment Date</label>
                    <input type="date" name="payment_date" class="form-control" 
                           value="<%= new Date().toISOString().split('T')[0] %>">
                </div>

                <div class="form-group">
                    <label>Method</label>
                    <select name="payment_method" class="form-control">
                        <option value="Card">Card</option>
                        <option value="Cash">Cash</option>
                        <option value="Transfer">Bank Transfer</option>
                    </select>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary close-modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Delete Modal -->
    <div id="deleteModal" class="modal">
        <div class="modal-content" style="max-width: 400px;">
            <div class="modal-header">
                <h2>Confirm Delete</h2>
                <button class="close-modal">&times;</button>
            </div>
            <p>Are you sure you want to delete this payment record?</p>
            <form action="/payments/delete" method="POST">
                <input type="hidden" name="payment_id">
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary close-modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Delete</button>
                </div>
            </form>
        </div>
    </div>

    <script src="/js/main.js"></script>

<%- include('../partials/layout_end') %>
